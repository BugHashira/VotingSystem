@model VotingSystem.Dto.Elections.ElectionDto;

@{
    ViewData["Title"] = "Election";
    ViewData["SubTitle"] = "Edit Election";

    var id = ViewContext.RouteData.Values["id"];

}

<div class="row">
    <div class="col-md-12">
        <div class="card card-user">
            <div class="card-header">
                <h5 class="card-title">@ViewData["SubTitle"]</h5>
            </div>
            <div class="card-body">
                <form asp-action="EditElection" asp-route-id="@id">
                    <div class="row">
                        <div class="col-md-6 pr-1">
                            <div class="form-group">
                                <label>Election Name</label>
                                <input type="text" class="form-control" name="ElectionName" placeholder="Election Name" value="@Model.ElectionName">
                            </div>
                        </div>
                        <div class="col-md-6 pl-1">
                            <div class="form-group">
                                <label>Description</label>
                                <input type="text" class="form-control" name="DescriptionName" placeholder="Description" value="@Model.DescriptionName">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 pr-1">
                            <div class="form-group">
                                <label>Start Date</label>
                                <input type="datetime" class="form-control" name="StartDate" placeholder="Start Date" value="@Model.StartDate">
                            </div>
                        </div>
                        <div class="col-md-6 pl-1">
                            <div class="form-group">
                                <label>End Date</label>
                                <input type="datetime" class="form-control" name="EndDate" placeholder="End Date" value="@Model.EndDate">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-primary btn-round">Edit Election</button>
                            <a href="@Url.Action("Elections")" class="btn btn-secondary btn-round">Elections List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>