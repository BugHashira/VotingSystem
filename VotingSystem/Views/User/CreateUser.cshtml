@using VotingSystem.Dto.Users;
@model CreateUserDto;

@{
    ViewData["Title"] = "User";
    ViewData["SubTitle"] = "Create User";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-user">
            <div class="card-header">
                <h5 class="card-title">@ViewData["SubTitle"]</h5>
            </div>
            <div class="card-body">
                <form asp-action="CreateUser">
                    <div class="row">
                        <div class="col-md-6 pr-1">
                            <div class="form-group">
                                <label>Matric Number</label>
                                <input type="text" class="form-control" name="MatricNumber" placeholder="MatricNumber">
                            </div>
                        </div>
                        <div class="col-md-6 pl-1">
                            <div class="form-group">
                                <label>College Id</label>

                                <select name="CollegeId" class="form-control" asp-items="ViewBag.SelectColleges" required>
                                    <option value=><i>Select college </i></option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 pr-1">
                            <div class="form-group">
                                <label>Department Id</label>

                                <select name="DepartmentId" class="form-control" asp-items="ViewBag.SelectDepartments" required>
                                    <option value=><i>Select department </i></option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-primary btn-round">Create User</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
