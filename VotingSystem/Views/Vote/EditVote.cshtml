@model VotingSystem.Dto.Votes.VoteDto;

@{
    ViewData["Title"] = "Vote";
    ViewData["SubTitle"] = "Edit Vote";

    var id = ViewContext.RouteData.Values["id"];
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-user">
            <div class="card-header">
                <h5 class="card-title">@ViewData["SubTitle"]</h5>
            </div>
            <div class="card-body">
                <form asp-action="EditVote" asp-route-id="@id">
                    <div class="row">
                        <div class="col-md-6 pr-1">
                            <div class="form-group">
                                <label>Voter Name</label>
                                <input type="text" class="form-control" name="UserId" placeholder="Voter Name" value="@Model.UserId">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 pr-1">
                            <div class="form-group">
                                <label>Candidate</label>
                                <input type="text" class="form-control" name="CandidateId" placeholder="Candidate" value="@Model.CandidateId">
                            </div>
                        </div>
                        <div class="col-md-6 pl-1">
                            <div class="form-group">
                                <label>Vote Time</label>
                                <input type="datetime" class="form-control" name="VoteTime" placeholder="Vote Tme" value="@Model.VoteTime">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-primary btn-round">Edit Vote</button>
                            <a href="@Url.Action("Votes")" class="btn btn-secondary btn-round">Votes List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
