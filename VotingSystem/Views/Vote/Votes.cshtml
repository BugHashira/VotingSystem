@using VotingSystem.Dto.Votes;
@model IEnumerable<VoteDto>;

@{
    ViewData["Title"] = "Vote";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title"> @ViewData["Title"]</h4>
                <a href="@Url.Action("CreateVote")" class="card-description"> Create Vote </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> Voter Name </th>
                                <th> Candidate Name </th>
                                <th> Vote Time </th>
                                <th> Action </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td> @item.UserId</td>
                                        <td>@item.CandidateId</td>
                                        <td>@item.VoteTime</td>
                                        <td>
                                            <a href="@Url.Action("EditVote",new {id = item.Id})" class="btn btn-gradient-dark btn-icon-text btn-sm">
                                                View <i class="mdi mdi-file-check btn-icon-append"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center"> No data found</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>