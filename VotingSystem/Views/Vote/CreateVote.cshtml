@using VotingSystem.Dto.Votes;
@model CreateVoteDto;

@{
    ViewData["Title"] = "Vote";
    ViewData["SubTitle"] = "Create Vote";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-user">
            <div class="card-header">
                <h5 class="card-title">@ViewData["SubTitle"]</h5>
            </div>
            <div class="card-body">
                <form asp-action="CreateVote">
                    <div class="row">
                        <div class="col-md-6 pr-1">
                            <div class="form-group">
                                <label>Voter Name</label>
                                <input type="text" class="form-control" name="UserId" placeholder="Voter Name">
                            </div>
                        </div>
                        <div class="col-md-6 pl-1">
                            <div class="form-group">
                                <label>Candidate</label>
                                <select class="form-control" name="CandidateId">
                                    <!-- Populate with candidates -->
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6 pl-1">
                            <div class="form-group">
                                <label>Vote Time</label>
                                <input type="datetime" class="form-control" name="VoteTime" placeholder="Vote Time">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-primary btn-round">Submit Vote</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
