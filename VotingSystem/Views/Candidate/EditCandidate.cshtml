@model VotingSystem.Dto.Candidates.CandidateDto;

@{
    ViewData["Title"] = "Candidate";
    ViewData["SubTitle"] = "Edit Candidate";

    var id = ViewContext.RouteData.Values["id"];
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-user">
            <div class="card-header">
                <h5 class="card-title">@ViewData["SubTitle"]</h5>
            </div>
            <div class="card-body">
                <form asp-action="EditCandidate" asp-route-id="@id">
                    <div class="row">
                        <div class="col-md-6 pr-1">
                            <div class="form-group">
                                <label>Candidate Name</label>
                                <input type="text" class="form-control" name="CandidateName" placeholder="Candidate Name" value="@Model.CandidateName">
                            </div>
                        </div>
                        <div class="col-md-6 pl-1">
                            <div class="form-group">
                                <label>Position</label>
                                <input type="text" class="form-control" name="PositionId" placeholder="Position" value="@Model.PositionId">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 pr-1">
                            <div class="form-group">
                                <label>Level</label>
                                <input type="text" class="form-control" name="Level" placeholder="Level" value="@Model.Level">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-primary btn-round">Edit Candidate</button>
                            <a href="@Url.Action("Candidates")" class="btn btn-secondary btn-round">Candidates List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
