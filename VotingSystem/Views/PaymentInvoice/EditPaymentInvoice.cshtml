@model VotingSystem.Dto.PaymentInvoices.PaymentInvoiceDto;

@{
    ViewData["Title"] = "Payment Invoice";
    ViewData["SubTitle"] = "Edit Payment Invoice";

    var id = ViewContext.RouteData.Values["id"];
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-user">
            <div class="card-header">
                <h5 class="card-title">@ViewData["SubTitle"]</h5>
            </div>
            <div class="card-body">
                <form asp-action="EditPaymentInvoice" asp-route-id="@id">
                    <div class="row">
                        <div class="col-md-6 pr-1">
                            <div class="form-group">
                                <label>Candidate Id</label>
                                <input type="text" class="form-control" name="CandidateId" placeholder="Candidate Id" value="@Model.CandidateId">
                            </div>
                        </div>
                        <div class="col-md-6 pl-1">
                            <div class="form-group">
                                <label>Payment Evidence</label>
                                <input type="image" class="form-control" name="PaymentEvidence" placeholder="PaymentEvidence" value="@Model.PaymentEvidence">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-primary btn-round">Edit Payment Invoice</button>
                            <a href="@Url.Action("PaymentInvoices")" class="btn btn-secondary btn-round">Payment Invoices List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
