@using VotingSystem.Dto.Positions
@model IEnumerable<PositionDto>;

@{
    ViewData["Title"] = "Position";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title"> @ViewData["Title"]</h4>
                <a href="@Url.Action("CreatePosition")" class="card-description"> Create Position </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> Position Name </th>
                                <th> Position Description </th>
                                <th> Price </th>
                                <th> Action </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.PositionName</td>
                                        <td>@item.PositionDescription</td>
                                        <td>@item.Price</td>
                                        <td>
                                            <a href="@Url.Action("EditPosition",new {id = item.Id})" class="btn btn-gradient-dark btn-icon-text btn-sm">
                                                View <i class="mdi mdi-file-check btn-icon-append"></i>
                                            </a>|
                                            <a href="@Url.Action("DeletePosition",new {id = item.Id})" class="btn btn-gradient-dark btn-icon-text btn-sm">
                                                Delete <i class="mdi mdi-file-check btn-icon-append"></i>
                                            </a>

                                        </td>
                                    </tr>

                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center"> No data found</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
