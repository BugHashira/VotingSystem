@model VotingSystem.Dto.Positions.PositionDto;

@{
    ViewData["Title"] = "Position";
    ViewData["SubTitle"] = "Edit Position";

    var id = ViewContext.RouteData.Values["id"];
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-user">
            <div class="card-header">
                <h5 class="card-title">@ViewData["SubTitle"]</h5>
            </div>
            <div class="card-body">
                <form asp-action="EditPosition" asp-route-id="@id">
                    <div class="row">
                        <div class="col-md-6 pr-1">
                            <div class="form-group">
                                <label>Position Name</label>
                                <input type="text" class="form-control" name="PositionName" placeholder="Position Name" value="@Model.PositionName">
                            </div>
                        </div>
                        <div class="col-md-6 pr-1">
                            <div class="form-group">
                                <label>Position Description</label>
                                <input type="text" class="form-control" name="PositionDescription" placeholder="Position Description" value="@Model.PositionDescription">
                            </div>
                        </div>
                        <div class="col-md-6 pl-1">
                            <div class="form-group">
                                <label>Price</label>
                                <input type="text" class="form-control" name="Price" placeholder="Price" value="@Model.Price">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-primary btn-round">Edit Position</button>
                            <a href="@Url.Action("Positions")" class="btn btn-secondary btn-round">Positions List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
