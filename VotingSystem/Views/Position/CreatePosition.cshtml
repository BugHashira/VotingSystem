@using VotingSystem.Dto.Positions;
@model CreatePositionDto;

@{
    ViewData["Title"] = "Position";
    ViewData["SubTitle"] = "Create Position";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-user">
            <div class="card-header">
                <h5 class="card-title">@ViewData["SubTitle"]</h5>
            </div>
            <div class="card-body">
                <form asp-action="CreatePosition">
                    <div class="row">
                        <div class="col-md-6 pr-1">
                            <div class="form-group">
                                <label>Position Description</label>
                                <input type="text" class="form-control" name="PositionDescription" placeholder="Position Description">
                            </div>
                        </div>
                        <div class="col-md-6 pl-1">
                            <div class="form-group">
                                <label>Price</label>
                                <input type="text" class="form-control" name="Price" placeholder="Price">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-primary btn-round">Create Position</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
